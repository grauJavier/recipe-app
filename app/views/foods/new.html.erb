<h1>New Food</h1>

<%= form_for @food do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :measurement_unit %>
    <%= f.text_field :measurement_unit, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.number_field :price, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :quantity %>
    <%= f.number_field :quantity, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.submit 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back to Food List', foods_path, class: 'btn btn-secondary' %>
