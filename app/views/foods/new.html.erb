<div class="card d-flex w-25 p-3 mx-auto mt-5">
  <h2 class="text-center">Add New Food</h2>
  <%= form_for @food, html: { class: 'd-flex flex-column' } do |f| %>
    <div class="form-group d-flex flex-column gap-2">
      <%= f.label :name, class: 'text-secondary' %>
      <%= f.text_field :name, class: 'form-control', required: true %>
    </div>

    <div class="form-group d-flex flex-column gap-2">
      <%= f.label :measurement_unit, class: 'text-secondary' %>
      <%= f.text_field :measurement_unit, class: 'form-control', required: true %>
    </div>

    <div class="form-group d-flex flex-column gap-2">
      <%= f.label :price, class: 'text-secondary' %>
      <%= f.number_field :price, class: 'form-control', required: true %>
    </div>

    <div class="form-group d-flex flex-column gap-2">
      <%= f.label :quantity, class: 'text-secondary' %>
      <%= f.number_field :quantity, class: 'form-control', required: true %>
    </div>

    <div class="form-group d-flex">
      <%= f.submit '+ Add New', class: 'btn btn-primary mt-2 w-100 px-4 mb-2' %>
    </div>
  <% end %>

  <%= link_to 'Back to Food List', foods_path, class: 'btn border-0 btn-outline-secondary' %>
</div>
