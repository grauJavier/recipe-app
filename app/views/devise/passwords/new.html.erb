<div class="card d-flex w-25 p-3 mx-auto mt-5">
  <h3>Forgot your password?</h3>
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "d-flex flex-column mb-3" }) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs d-flex flex-column gap-2">
      <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email", class: "w-100" },
                label_html: { class: "text-secondary" } %>
    </div>
    <div class="form-actions d-flex">
      <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary mt-2 ms-auto px-4 w-100" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
