<div class="card d-flex w-25 p-3 mx-auto mt-5">
  <h2>Sign up</h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "d-flex flex-column" }) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs d-flex flex-column gap-2">
      <%= f.input :name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "name", class: "w-100" },
                label_html: { class: "text-secondary" },
                label: "Name" %>
      <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email", class: "w-100" },
                label_html: { class: "text-secondary" } %>
      <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                hint_html: { class: "small text-secondary fst-italic float-end" },
                input_html: { autocomplete: "new-password", class: "w-100" },
                label_html: { class: "text-secondary" } %>
      <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password", class: "w-100" },
                label_html: { class: "text-secondary" } %>
    </div>
    <div class="form-actions d-flex">
      <%= f.button :submit, "Sign up", class: "btn btn-primary mt-2 ms-auto px-4" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
